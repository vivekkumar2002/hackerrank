void bonAppetit(vector<int> bill, int k, int b) {
    int actual_bill,total_cost=0;
    for(int i=0;i<bill.size();i++)
    {
        total_cost=total_cost+bill[i];
        
    }
    actual_bill=(total_cost-bill[k])/2;
    if(actual_bill==b)
    {
        cout<<"Bon Appetit";
    }
    else
    {
        cout<<b-actual_bill;
    }

}
